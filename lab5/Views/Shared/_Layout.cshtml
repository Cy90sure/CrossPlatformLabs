<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lab5</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav>
            <div class="navbar">
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">lab5</a>
                <ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <p class="btn btn-primary">Лабораторні роботи</p>
                            <div class="dropdown-menu">
                                <a asp-controller="Lab" asp-action="Lab1">Лаб 1</a>
                                <a asp-controller="Lab" asp-action="Lab2">Лаб 2</a>
                                <a asp-controller="Lab" asp-action="Lab3">Лаб 3</a>
                            </div>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <p class="btn btn-primary">Акаунт</p>
                            <div class="dropdown-menu">
                                <a asp-controller="Home" asp-action="Profile">Профіль</a>
                                <a asp-controller="Account" asp-action="Logout">Вийти</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fa fa-sign-in"></i> Увійти
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
